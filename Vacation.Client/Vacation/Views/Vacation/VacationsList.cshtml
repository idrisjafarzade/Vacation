@model VacationsWM 
@{
    ViewData["Title"] = "VacationsList";
}


<div class="main-panel">
     <div class="content-wrapper">
        <div class="row">
          <div class="col-lg-12 grid-margin stretch-card">
             <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Basic Table</h4>
                        <div class="table-responsive">
                           <table class="table">
                                <thead>
                                   <tr>
                                       <th>Substituter Employee Fulname </th>
                                       <th>Substituter Employee Fulname </th>
                                       <th>Employee Position</th>
                                       <th>Vacation Name</th>
                                       <th>Vacation Status</th>
                                       <th>Vacation StartTime</th>
                                       <th>Vacation EndTime</th>
                                       <th>Vacation Apply Number</th>
                                       <th>Actions</th>
                                     </tr>
                                        </thead>
                                            <tbody>
                                        @foreach (var item in Model.Vacations)
                                            {
                                            <tr>
                                            <td>@item.Employee.FullName</td>
                                            <td>@item.EmployeeSubstitute</td>
                                            <td>@item.Employee.Position</td>
                                            <td>@item.Vacation.Name</td>
                                            <td>@item.Status</td>
                                            <td>@item.StartTime.ToShortDateString()</td>
                                            <td>@item.EndTime.ToShortDateString()</td>
                                            <td>@item.VacationApplyNumber</td>
                                            <td><a asp-action="UpdateStatus" asp-route-id="@item.Id">Tesdiq </a> <td>
                                           </tr>
                                         }
                                            </tbody>
                                    </table>
                            </div>
                       </div>
                   </div>
              </div>
         </div>
     </div>
</div>